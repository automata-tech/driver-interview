{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Serilog": {
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  "ThermalCycler": {
    "TcpHost": "localhost",
    "TcpPort": 9999,
    "ConnectionTimeoutMs": 5000,
    "SafetyLimits": {
      "MaxDoorCycles": 8,
      "MaxTemperatureChanges": 12,
      "MaxStopCommands": 6,
      "MaxEmergencyStops": 2,
      "MaxOpenDoorCalibrations": 1,
      "MaxTemperatureChangePerMinute": 30.0,
      "MaxTemperatureShock": 40.0
    }
  }
}